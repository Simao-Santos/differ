{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true,
        "jest/globals": true
    },
    "extends": [
        "airbnb-base",
        "plugin:jest/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        // https://github.com/expressjs/generator/issues/78#issuecomment-232890226
        "no-unused-vars": ["error", { "argsIgnorePattern": "next" }],
        "no-console": "off",
        "no-warning-comments": "error"
    }
}
